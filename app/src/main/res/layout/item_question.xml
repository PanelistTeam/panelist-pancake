<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground">
	
	<TextView
		android:id="@+id/textView_itemQuestion_question"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text=""
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/imageView_itemQuestion_questioner"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_marginBottom="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/textView_itemQuestion_questioner"
		app:layout_constraintHorizontal_chainStyle="spread_inside"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView_itemQuestion_question"
		app:srcCompat="@drawable/ic_owner_24dp" />
	
	<TextView
		android:id="@+id/textView_itemQuestion_questioner"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="16dp"
		android:text=""
		android:textColor="@android:color/darker_gray"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/textView_itemQuestion_score"
		app:layout_constraintStart_toEndOf="@+id/imageView_itemQuestion_questioner"
		app:layout_constraintTop_toBottomOf="@+id/textView_itemQuestion_question" />
	
	<TextView
		android:id="@+id/textView_itemQuestion_score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="4dp"
		android:layout_marginTop="16dp"
		android:text="45"
		android:textColor="@android:color/darker_gray"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/imageView_itemQuestion_like"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintStart_toEndOf="@id/textView_itemQuestion_questioner"
		app:layout_constraintTop_toBottomOf="@id/textView_itemQuestion_question" />
	
	<ImageView
		android:id="@+id/imageView_itemQuestion_like"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintEnd_toStartOf="@id/imageView_itemQuestion_dislike"
		app:layout_constraintHorizontal_chainStyle="spread_inside"
		app:layout_constraintStart_toEndOf="@id/textView_itemQuestion_score"
		app:layout_constraintTop_toBottomOf="@id/textView_itemQuestion_question"
		app:srcCompat="@drawable/ic_thumb_up_24dp" />
	
	<ImageView
		android:id="@+id/imageView_itemQuestion_dislike"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_chainStyle="spread_inside"
		app:layout_constraintStart_toEndOf="@id/imageView_itemQuestion_like"
		app:layout_constraintTop_toBottomOf="@+id/textView_itemQuestion_question"
		app:srcCompat="@drawable/ic_thumb_down_24dp" />
	
</android.support.constraint.ConstraintLayout>
